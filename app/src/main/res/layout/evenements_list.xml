<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/evenements_list_imageView"
        android:layout_width="132dp"
        android:layout_height="89dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.506"
        app:srcCompat="@drawable/banniere" />

    <TextView
        android:id="@+id/evenements_titre_list_textView"
        android:layout_width="222dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textColor="@color/background"
        app:layout_constraintLeft_toRightOf="@+id/evenements_list_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/desc_evenements_list_textView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="8dp"
        android:maxWidth="200dp"
        android:minHeight="69dp"
        android:text="TextView"
        android:textColor="@color/background"
        app:layout_constraintLeft_toRightOf="@+id/evenements_list_imageView"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/evenements_titre_list_textView" />

</android.support.constraint.ConstraintLayout>