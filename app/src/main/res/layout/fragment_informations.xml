<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flst.fges.musehome.ui.fragment.InformationsFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ScrollView
            android:id="@+id/information_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/information_frag_textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/supervision_info"
                android:minHeight="70dp" />
        </ScrollView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/supervision_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

